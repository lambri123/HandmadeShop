@model ManageUserRolesViewModel

<h2>Управление на роли за @Model.UserName</h2>

<form asp-action="Manage" method="post">
    <input type="hidden" asp-for="UserId" />

    <div class="form-group">
        @foreach (var role in Model.AvailableRoles)
        {
            <div class="form-check">
                <input type="checkbox" class="form-check-input" name="SelectedRoles" value="@role"
                @if (Model.UserRoles.Contains(role))
                {
                    <text>checked</text>
                } />
                <label class="form-check-label">@role</label>
            </div>
        }
    </div>

    <button type="submit" class="btn btn-success">Запази</button>
    <a asp-action="Index" class="btn btn-secondary">Назад</a>
</form>

